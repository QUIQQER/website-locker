<?xml version="1.0" encoding="UTF-8"?>
<site>
    <attributes>
        <attribute>quiqqer.website.locker.status</attribute>
        <attribute>quiqqer.website.locker.password</attribute>
        <attribute>quiqqer.website.locker.title</attribute>
        <attribute>quiqqer.website.locker.description</attribute>
        <attribute>quiqqer.website.locker.background</attribute>
        <attribute>quiqqer.website.locker.logo</attribute>
        <attribute>quiqqer.website.locker.ownImage</attribute>
    </attributes>

    <settings>
        <category name="website-locker">
            <settings>
                <title>
                    <locale group="quiqqer/website-locker"
                            var="website-locker.siteSettings"/>
                </title>

                <input type="checkbox" conf="quiqqer.website.locker.status">
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.status"/>
                    </text>
                </input>
                <input conf="quiqqer.website.locker.password">
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.password"/>
                    </text>
                </input>
                <input conf="quiqqer.website.locker.title">
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.title"/>
                    </text>
                </input>
                <textarea conf="quiqqer.website.locker.description">
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.description"/>
                    </text>
                </textarea>
                <input conf="quiqqer.website.locker.background"
                       data-qui="controls/projects/project/media/Input"
                >
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.background"/>
                    </text>
                </input>
                <select conf="quiqqer.website.locker.logo">
                    <title>
                        <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo"/>
                    </title>
                    <select conf="menu.settings.type">
                        <text>
                            <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo.image"/>
                        </text>
                        <option value=""></option>
                        <option value="projectLogo">
                            <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo.projectLogo"/>
                        </option>
                        <option value="banIcon">
                            <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo.banIcon"/>
                        </option>
                        <option value="lockIcon">
                            <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo.lockIcon"/>
                        </option>
                        <option value="ownImage">
                            <locale group="quiqqer/website-locker" var="website-locker.siteSettings.logo.ownImage"/>
                        </option>
                    </select>
                </select>
                <input conf="quiqqer.website.locker.ownImage"
                       data-qui="controls/projects/project/media/Input"
                >
                    <text>
                        <locale group="quiqqer/website-locker"
                                var="website-locker.siteSettings.ownImage"/>
                    </text>
                    <description>
                        <locale group="quiqqer/website-locker" var="website-locker.siteSettings.ownImage.desc"/>
                    </description>
                </input>
            </settings>
        </category>
    </settings>
</site>
